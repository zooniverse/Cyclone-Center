$blue = #027da9
$orange = #ff8400
$navy = #00305c
$green = #3A9C5B

$sans-serif = "Lato", Arial, sans-serif

p
  line-height: 1.5em

li
  line-height: 1.5em

.sub-section-menu
  list-style: none
  clearfix()
  li 
    float: left
    a
      color: inherit
      border-radius: 15px
      box-sizing: border-box
      margin: 0 10px 0 0
      padding: 6px 18px
      border: 2px solid transparent

      &:hover, &.active
        border: 2px solid $orange  

#_STANDARD_BUTTON
  background: $navy
  border-radius: 4px
  display: inline-block
  font-family: "Lato", sans-serif
  outline: none
  margin: 0 2px
  padding: 14px 30px
  text-align: center
  text-decoration: none

  &:hover
    background: lighten($navy, 10%)

  &.orange
    background: $orange
    color: white

#_CLASSIFIER_BUTTON
  border: none
  display: inline-block
  outline: none
  color: #fff
  height: 45px
  outline: none
  border-radius: 5px
  background-color: $orange
  box-shadow: none
  position: relative
