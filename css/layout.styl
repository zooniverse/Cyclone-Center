html
  background: #2a2a2a
  color: white
  font-family: "Lato", sans-serif
  font-size: 14px

body
  margin: 0

  hr
    border: 0
    border-top: 1px solid rgba(#fff, 0.5)
    margin: 2em 0

  h1
    font-size: 44px
    font-weight: 300
    margin: 0.25em 0

  h2
    font-size: 20px
    font-weight: 300

  a
    color: inherit
    text-decoration: none

    &:hover
      color: $orange

  ul
    padding-left: 14px

.site-navigation
  align-items: center
  display: flex
  box-sizing: border-box
  min-height: 65px
  justify-content: space-between
  position: relative

  .menu
    a
      color: inherit
      border-radius: 15px
      box-sizing: border-box
      margin: 0 10px 0 0
      padding: 6px 18px
      border: 2px solid transparent

      &:hover:not(.logo), &.active:not(.logo)
        border: 2px solid $orange

      &.logo
        font-size: 20px

  .zooniverse-top-bar
    background: none
    font-size: 14px
    position: relative

    .avatar img
      border-radius: 50%

    .corner,
    .groups
      display: none

#app > .page
  & > .page-nav
    display: none

  & > .page-subpages > .page
    display: none

    &.active
      display: block

#footer-container
  background: #2c2c2c
  border-top: 1px solid #222

.zooniverse-footer
  color: #999
  font-weight: 300
  margin: 0 auto
  max-width: 1000px
  padding: 50px 10px

  .zooniverse-logo-container
    float: none
    overflow: hidden
    &:hover
      transition: transform 0.8s
      transform: rotate(720deg);

    .zooniverse-logo
      margin: 0
      max-height: 100px
      width: 100%

  .zooniverse-footer-heading
    margin-top: 25px

  .zooniverse-footer-content
    width: 100%

  .zooniverse-footer-project
    line-height: 1.45em

  .zooniverse-footer-category
    @media screen and (max-width: 520px)
      width: 100%;
      text-align: center;
      margin-bottom: 20px;
      .zooniverse-footer-category-title
        margin-bottom: 5px;
