html
  background: #373737
  color: white
  font-family: "Lato", sans-serif

body
  margin: 0

  hr
    border: 0
    border-top: 1px solid rgba(#fff, 0.5)
    margin: 2em 0

  h1
    font-size: 44px
    font-weight: 300
    margin: 0.25em 0

  h2
    font-size: 20px
    font-weight: 300

  a
    color: inherit
    text-decoration: none

    &:hover
      color: $orange

  ul
    padding-left: 14px

.site-navigation
  a
    color: inherit
    border-bottom: 0
    display: inline-block
    padding: 15px 10px

    &.logo
      font-size: 20px

#app > .page
  & > .page-nav
    display: none

  & > .page-subpages > .page
    display: none

    &.active
      display: block

#footer-container
  background: #2c2c2c
  border-top: 1px solid #222

.zooniverse-footer
  color: #999
  font-weight: 300
  margin: 0 auto
  max-width: 1000px
  padding: 50px 0

  .zooniverse-logo-container
    float: none

    .zooniverse-logo
      margin: 0 0 15px 0
      max-height: 100px
      width: 100%

  .zooniverse-footer-content
    width: 100%

  .zooniverse-footer-project
    line-height: 1.45em
