.talk-posts
  .talk-post
    width: 100%
    overflow: auto
    margin-bottom: 5px
    display: table

    .talk-post-thumbnail
      width: 100%
      border-radius: 50%
      float: left
      margin: auto
      box-sizing: border-box
      padding: 10px 10px 10px 0

    .talk-post-content
      overflow: auto
      padding: 10px 0 10px 20px
      display: table-cell
      vertical-align: middle
      width: 75%
      line-height: 1.5em
      font-size: 16px
      box-sizing: border-box
      color: $blue

      .talk-post-username
        color: #000

      a
        color: $orange
        font-size: 14px