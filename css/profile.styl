.zooniverse-profile
  margin: 50px auto
  max-width: 1000px
  padding: 10px

  .sign-in-form
    button
      cursor: pointer
    .action
      margin-top: 0
      button[type='submit']
        @extend #_CLASSIFIER_BUTTON
    .no-account
      button[name='sign-up']
        background: none
        border: none
        font-size: 14px
        color: $orange


  .label
    bottom: 15px
    font-size: 16px
    font-weight: bold
    left: 20px
    position: absolute
    text-shadow: 0 0 1px #000,
                 0 0 3px #000,
                 0 0 10px #000


  nav button,
  .zooniverse-paginator .controls button
    background: #505050
    border: 0
    border-radius: 4px
    box-shadow: none
    color: white
    cursor: pointer
    font-size: 14px
    margin: 0 8px 0 0
    padding: 5px 12px
    text-shadow: none
    outline: none

    &.active,
    &:hover
      background: $orange

  .zooniverse-paginator .controls button
    border-radius: 10px
    width: auto
