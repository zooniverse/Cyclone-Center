.page > .home
  color: #fcfcfc
  font-family: "Lato", sans-serif
  font-size: 14px
  text-shadow: none

  .subtle-heading
    color: #fff
    font-style: italic
    font-weight: 100
    padding: 15px 0

  .section-split
    display: flex

    > *
      box-sizing: border-box
      min-height: 550px
      padding: 0 100px
      width: 50%
    @media screen and (max-width: 800px)
      display: block
      > *
        width: 100%

  .project-name-section,
  .project-name-section,
  .project-introduction
    padding: 160px 100px

  .project-name-section
    background-image: url(./images/project-name-background.jpg)
    background-repeat: no-repeat
    background-size: cover

    .project-name
      color: white
      font-size: 80px
      font-weight: 300
      line-height: 88px
      position: relative

  .project-introduction
    background: $orange
    color: white

    .action-buttons
      margin: 35px 0 0 0

      a
        @extends #_STANDARD_BUTTON
        font-weight: 300
        font-size: 18px

  .project-updates
    background: white
    color: #333
    padding: 40px 100px

  .project-blog
    background-image: url(./images/blog-background.jpg)
    background-repeat: none
    background-size: cover
    padding: 40px 100px

    .huge-title
      font-size: 60px
      font-weight: 300
      margin: 0 0 20px 0

    .previous-posts
      font-size: 20px
      font-weight: 100
      padding: 10px 0
      text-decoration: underline

      a
        display: block

  .call-to-action
    background: $orange
    padding: 25px 0 45px 0
    text-align: center

  .get-involved
    font-size: 32px
    font-weight: 100
    margin: 30px 0

  .get-started
    @extends #_STANDARD_BUTTON
    font-size: 16px
    font-weight: 300
    margin: 5px 0

  .project-stats
    display: flex
    justify-content: center
    padding: 25px 0

    > *
      color: #999
      font-size: 16px
      max-width: 250px
      padding: 0 30px
      text-align: center

      .stat
        color: white
        font-size: 32px
        padding: 0 0 4px 0

