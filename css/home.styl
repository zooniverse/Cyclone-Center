.page > .home
  color: #fcfcfc
  font-family: "Lato", sans-serif
  font-size: 14px
  text-shadow: none

  .section-split
    display: flex

  .section
    box-sizing: border-box
    min-height: 550px
    padding: 160px 100px
    width: 50%

  .project-name-section
    background-image: url(./images/project-name-background.jpg)
    background-repeat: no-repeat
    background-size: cover

    .project-name
      color: white
      font-size: 80px
      font-weight: 300
      line-height: 88px
      position: relative


  .project-introduction
    background: #ff8400
    color: white

  .project-updates
    background: white
    color: #333

  .project-blog
    background-image: url(./images/blog-background.jpg)
    background-repeat: none
    background-size: cover

  .section-break
    background: #373737
    color: #c8c8c8
    font-size: 16px
    padding: 20px 0
    text-align: center

  .action-buttons a
    @extends #_STANDARD_BUTTON
    font-weight: 300
    font-size: 18px

  .call-to-action
    background: #ff8400
    padding: 25px 0
    text-align: center

  .get-involved
    font-size: 32px
    font-weight: 100
    margin: 30px 0

  .get-started
    @extends #_STANDARD_BUTTON
    font-size: 16px
    font-weight: 300
    margin: 5px 0
