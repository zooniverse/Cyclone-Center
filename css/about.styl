.about
  margin: 200px auto
  background-color: white
  min-height: 730px

  .about-header
    background-image: url(./images/about/about-header.png) 
    position: absolute
    width: 100%
    top: 65px
    left: 0
    padding: 40px 0

    .about-header-copy
      max-width: 940px 
      line-height: 36px
      margin: 0 auto

      h1
        font-size: 48px

      h3
        font-size: 18px

  #about-stack
    color: $dark-gray
    max-width: 940px
    padding-bottom: 100px

    h2
      font-size: 24px
      line-height: 28px
      font-weight: bold
      font-style: italic
      margin: 0 0 20px

    p
      font-size: 17px
      line-height: 28px
      margin: 0 0 14px
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale

    #image-diagram
      text-align: center
      padding: 46px 0 55px

[data-popup]
  cursor: pointer

.hang-left
  float: left
  margin: 0 1em 0.5em 0

.zooniverse-dialog.about
  button[name="close-dialog"]
    height: 2em
    position: absolute
    right: 0
    top: 0
    width: 2em

  img
    max-width: 100%

.team-member
  display: inline-block
  margin: 0 3% 25px 0
  vertical-align: top
  width: 45%

  img
    float: left

  h4,
  p
    margin: 0 0 0 110px
