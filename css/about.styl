.about
  background-color: white
  min-height: 730px

  .about-header
    background-image: url(./images/about/about-header.png)
    width: 100%
    height: 200px

    .about-header-copy
      line-height: 36px
      padding: 40px 20px

      h1
        font-size: 48px

      h3
        font-size: 18px

  #about-stack
    color: $dark-gray
    max-width: 940px
    padding: 0 20px 100px

    h2
      font-size: 24px
      line-height: 28px
      font-weight: bold
      font-style: italic
      margin: 0 0 20px

    .about-non-italic-header
      font-size: 26px
      font-style: normal

    p
      font-size: 17px
      line-height: 28px
      margin: 0 0 14px
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale

    #image-diagram
      text-align: center
      padding: 46px 0 55px

      img
        width: 100%
        max-width: 600px

    a
      @extends #_STANDARD_BUTTON
      color: white

[data-popup]
  cursor: pointer

.hang-left
  float: left
  margin: 0 1em 0.5em 0

.zooniverse-dialog.about
  button[name="close-dialog"]
    height: 2em
    position: absolute
    right: 0
    top: 0
    width: 2em

  img
    max-width: 100%

.team-member
  display: inline-block
  margin: 0 3% 25px 0
  vertical-align: top
  width: 45%

  img
    float: left
    padding: 0 30px 10px 0

  h4,
  p
    margin: 0 0 0 110px

  @media screen and (max-width: 400px)
    width: 100%
